function ctpath(action)
    % CTPATH
    % Set the search path for Matlab to access utility functions for
    % Cantera Matlab Toolbox. 
    %
    % :param action:
    %    string  'install' or 'uninstall'

    if strcmp(action, 'install')
        addpath('@ct_matlab_dir@');
        savepath;
        disp('Search path added');
    elseif strcmp(action, 'uninstall')
        SetMatlabToolboxVersion('uninstall');
        rmpath('@ct_matlab_dir@');
        savepath;
    else
        error('Please specify an action');
    end
end
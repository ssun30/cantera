function SetMatlabToolboxVersion(ver)
    % Sets the version of the Cantera Matlab Interface
    %
    % :param ver:
    %    string  'legacy'/'new';

    % Add search paths for toolboxes
    if isa(ver, 'char')
        if strcmp(ver, 'legacy')
            warning('off');
            rmpath(genpath('@ct_matlab_new_dir@'));
            rmpath('@ct_sampledir@/matlab');
            addpath('@ct_matlab_legacy_dir@');
            addpath('@ct_matlab_legacy_dir@/1D');
            addpath('@ct_sampledir@/matlab_legacy');
            savepath;
            disp('Cantera Matlab Toolbox Has Been Set To The Legacy Version');
        elseif strcmp(ver, 'new')
            warning('off');
            addpath(genpath('@ct_matlab_new_dir@'));
            addpath('@ct_sampledir@/matlab');
            rmpath('@ct_matlab_legacy_dir@');
            rmpath('@ct_matlab_legacy_dir@/1D');
            rmpath('@ct_sampledir@/matlab_legacy');
            savepath;
            disp('Cantera Matlab Toolbox Has Been Set To The New Version');
        else
            error('Interface version must be "legacy" or "new"');
        end
    else
        error('Invalid input');
    end
end

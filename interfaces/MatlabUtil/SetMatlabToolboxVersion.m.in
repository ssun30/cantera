function SetMatlabToolboxVersion(ver)
    % Sets the version of the Cantera Matlab Interface
    %
    % :param ver:
    %    string  'legacy'/'new';

    % Add search paths for toolboxes
    if isa(ver, 'char')
        if strcmp(ver, 'legacy')
            rmpath(genpath('@ct_matlab_dir@/matlab_new'));
            rmpath('@ct_sampledir@/matlab_new');
            addpath('@ct_matlab_dir@/matlab_legacy');
            addpath('@ct_matlab_dir@/matlab_legacy/1D');
            addpath('@ct_sampledir@/matlab_legacy');
            disp('Cantera Matlab Toolbox Has Been Set To The Legacy Version');
        elseif strcmp(ver, 'new')
            addpath(genpath('@ct_matlab_dir@/matlab_new'));
            addpath('@ct_sampledir@/matlab_new');
            rmpath('@ct_matlab_dir@/matlab_legacy');
            rmpath('@ct_matlab_dir@/matlab_legacy/1D');
            rmpath('@ct_sampledir@/matlab_legacy');
            disp('Cantera Matlab Toolbox Has Been Set To The Legacy Version');
        else
            error('Interface version must be "legacy" or "new"');
        end
    else
        error('Invalid input');
    end
end
